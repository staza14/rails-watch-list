<div class = "container">
<h2><%=  @list.name%></h2>
<%=link_to 'add a movie',  new_list_bookmark_path(@list)%>
</div>
<div>
<p>check out all <%= @list.movies.count %> movies in this list.</p>
</div>


<div class="card-container">
<% @list.bookmarks.each do |bookmark| %>
<div class="card-product">
  <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
  <div class="card-product-infos">
    <h2><%= bookmark.movie.title %></h2>
    <p><%= bookmark.comment %></p>
<%= link_to "delete", bookmark_path(bookmark), data: {turbo_method: :delete} %>
  </div>
</div>
<% end %>
</div>

<div>
<%=link_to 'go back to all lists', lists_path %>
</div>
